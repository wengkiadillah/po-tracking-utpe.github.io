@model IEnumerable<POTrackingV2.Models.SequencesProgressReason>

@{
    ViewBag.Title = "Index";
}

<h2>Sequence Progress Reason</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <span>
                    <a class="col-xs-2" href="@Url.Action("Details", "ReasonSubCont", new { id = item.ID })" alt="Details">
                        <i class="fa fa-info-circle fa-lg"></i>
                    </a>
                </span>
                <span>
                    <a class="col-xs-2" href="@Url.Action("Edit", "ReasonSubCont", new { id = item.ID })" alt="Details">
                        <i class="fa fa-edit fa-lg"></i>
                    </a>
                </span>
                <span>
                    <a class="col-xs-2" href="@Url.Action("Delete", "ReasonSubCont", new { id = item.ID })" alt="Details">
                        <i class="fa fa-trash fa-lg"></i>
                    </a>
                </span>
            </td>
        </tr>
    }

</table>
