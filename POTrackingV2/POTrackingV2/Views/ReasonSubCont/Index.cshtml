@model IEnumerable<POTrackingV2.Models.SequencesProgressReason>

@{
    ViewBag.Title = "Index";
}

<h2>Sequence Progress Reason</h2>

<div class="um">
    <div class="filter-row">
        @using (Html.BeginForm("Index", "ReasonSubCont", null, FormMethod.Get, new { @class = "filter-form-container form-inline" }))
        {
            <div class="form-group mr-4">
                <input name="search" type="text" class="form-control form-control-lg filter-search with-icon" placeholder="Search" value="@ViewBag.CurrentSearchString" />
                <i class="fas fa-search form-type-icon hint"></i>
            </div>

            <button type="submit" class="btn btn-info mr-3">Find</button>
            @Html.ActionLink("Clear", "Index", new { role = Request.QueryString["role"] }, new { @class = "btn btn-info mr-3" })
        }
        <div class="form-group mt-4">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info" })

        </div>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span>
                        <a class="col-xs-2" href="@Url.Action("Details", "ReasonSubCont", new { id = item.ID })" alt="Details">
                            <i class="fa fa-info-circle fa-lg"></i>
                        </a>
                    </span>
                    <span>
                        <a class="col-xs-2" href="@Url.Action("Edit", "ReasonSubCont", new { id = item.ID })" alt="Details">
                            <i class="fa fa-edit fa-lg"></i>
                        </a>
                    </span>
                    <span>
                        <a class="col-xs-2" href="@Url.Action("Delete", "ReasonSubCont", new { id = item.ID })" alt="Details" style="color:red;">
                            <i class="fa fa-trash fa-lg"></i>
                        </a>
                    </span>
                </td>
            </tr>
        }

    </table>
</div>

