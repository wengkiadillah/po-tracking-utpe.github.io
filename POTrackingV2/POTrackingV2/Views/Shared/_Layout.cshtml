                        <ul class="main-menu-submenu list-unstyled">
                            <li class="main-menu-submenu-item">
                                <a href="~/SubCont/index" class="main-menu-submenu__link" data-menu="On Going">
                                    <span>On Going</span>
                                    <span class="pull-right-container">
                                        <small id="subcont-ongoing__count" class="label pull-right bg-green mr-1" title="Confirmation">16</small>
                                    </span>
                                </a>
                            </li>
                            <li class="main-menu-submenu-item">
                                <a href="~/SubCont/outstanding" class="main-menu-submenu__link" data-menu="Outstanding">
                                    <span>Outstanding</span><span class="pull-right-container">
                                        <small id="subcont-outgoing__count" class="label pull-right bg-yellow mr-1" title="Confirmation">16</small>
                                    </span>
                                </a>
