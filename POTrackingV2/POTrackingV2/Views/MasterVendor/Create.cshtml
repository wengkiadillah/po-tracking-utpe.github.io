@section scripts {
    <script src="~/Scripts/donutty-jquery.min.js"></script>

    <script>
        $(function () {
            $('select#SelectedName').on('change', function () {
                var code = $(this).val();

                $.ajax({
                    url: 'potracking/MasterVendor/getById?code=' + code,
                    type: 'GET',
                    success: function (data) {
                        console.log(data)
                        $('input#subCont_VendorCode').val(data.vendorCode);
                    }
                })
            })
        })
    </script>

