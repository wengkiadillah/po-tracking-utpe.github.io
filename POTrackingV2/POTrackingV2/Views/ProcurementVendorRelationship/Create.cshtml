@model POTrackingV2.ViewModels.ProcurementVendorRelationshipCreateViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Procurement Vendor Relationship</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>User Procurement</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.procurementVendorRelationship.ProcurementUsername, Model.selectListProcurementUsernames, "Select", htmlAttributes: new { @class = "form-control full-width" })
                @Html.ValidationMessageFor(model => model.procurementVendorRelationship.ProcurementUsername, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Vendor</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.procurementVendorRelationship.VendorCode, Model.selectListVendors, "Select", htmlAttributes: new { @class = "form-control full-width" })
                @Html.ValidationMessageFor(model => model.procurementVendorRelationship.VendorCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
